{
    "manifest_version": 3,
    "name": "Verify AI",
    "version": "1.0",
    "description": "Your extension description",
    "permissions": [
        "activeTab",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "action": {
        "default_popup": "window.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}